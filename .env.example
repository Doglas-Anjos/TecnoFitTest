# ===========================================
# Application Configuration
# ===========================================
APP_NAME=TecnoFit
APP_ENV=dev
SCAN_CACHEABLE=false

# ===========================================
# Docker Configuration
# ===========================================
# Container names
CONTAINER_HYPERF=hyperf
CONTAINER_MYSQL=mysql
CONTAINER_MAILHOG=mailhog

# Network
DOCKER_NETWORK=tecnofit-network

# ===========================================
# Hyperf Configuration
# ===========================================
HYPERF_PORT=9501

# ===========================================
# Database Configuration
# ===========================================
DB_DRIVER=mysql
DB_HOST=mysql
DB_PORT=3306
DB_EXTERNAL_PORT=3307
DB_DATABASE=hyperf
DB_USERNAME=hyperf
DB_PASSWORD=hyperf
DB_ROOT_PASSWORD=root
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_AUTH=(null)
REDIS_PORT=6379
REDIS_DB=0

# ===========================================
# Mail Configuration (Mailhog)
# ===========================================
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_WEB_PORT=8025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@tecnofit.com
MAIL_FROM_NAME=TecnoFit

# ===========================================
# Test Environment Configuration
# ===========================================
HYPERF_TEST_PORT=9502
DB_TEST_PORT=3308
MAIL_TEST_PORT=1026
MAIL_TEST_WEB_PORT=8026
TEST_DASHBOARD_PORT=3000

# Number of random accounts to auto-create on startup (in addition to 6 edge case accounts)
AUTO_POPULATE_COUNT=100