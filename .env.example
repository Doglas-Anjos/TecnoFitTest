# ===========================================
# Application Configuration
# ===========================================
APP_NAME=TecnoFit
APP_ENV=dev                              # dev, testing, production
APP_TIMEZONE=America/Sao_Paulo
SCAN_CACHEABLE=false                     # true for production (caches annotations)

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO                           # DEBUG, INFO, WARNING, ERROR
LOG_FILE_ENABLED=false                   # Enable async JSON file logging

# ===========================================
# Docker Configuration
# ===========================================
# Container names (single instance)
CONTAINER_HYPERF=hyperf
CONTAINER_MYSQL=mysql
CONTAINER_MAILHOG=mailhog

# Network
DOCKER_NETWORK=tecnofit-network

# ===========================================
# Hyperf Configuration
# ===========================================
HYPERF_PORT=9501

# ===========================================
# Database Configuration
# ===========================================
DB_DRIVER=mysql
DB_HOST=mysql
DB_PORT=3306
DB_EXTERNAL_PORT=3307
DB_DATABASE=hyperf
DB_USERNAME=hyperf
DB_PASSWORD=hyperf
DB_ROOT_PASSWORD=root
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_AUTH=
REDIS_PORT=6379
REDIS_DB=0

# ===========================================
# Mail Configuration
# ===========================================
# For local development with Mailhog:
# MAIL_HOST=mailhog
# MAIL_PORT=1025

# For Mailtrap (sandbox testing):
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=                           # Your Mailtrap username
MAIL_PASSWORD=                           # Your Mailtrap password
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@tecnofit.com
MAIL_FROM_NAME=TecnoFit
MAIL_WEB_PORT=8025                       # Mailhog web UI port

# ===========================================
# Test Environment Configuration
# ===========================================
HYPERF_TEST_PORT=9502
DB_TEST_PORT=3308
MAIL_TEST_PORT=1026
MAIL_TEST_WEB_PORT=8026
TEST_DASHBOARD_PORT=3000

# Number of random accounts to auto-create on startup (in addition to 6 edge case accounts)
AUTO_POPULATE_COUNT=100

# ===========================================
# Horizontal Scaling Configuration
# ===========================================
# Nginx Load Balancer
NGINX_PORT=9501

# Scale Environment Ports
SCALE_DB_PORT=3307                       # MySQL port for scale environment
SCALE_TEST_DB_PORT=3309                  # MySQL port for scale test environment
SCALE_MAILHOG_SMTP_PORT=1025
SCALE_MAILHOG_WEB_PORT=8025

# Container Names (Scale)
SCALE_NGINX_CONTAINER=tecnofit-nginx
SCALE_API1_CONTAINER=tecnofit-api-1
SCALE_API2_CONTAINER=tecnofit-api-2
SCALE_CRON_CONTAINER=tecnofit-cron
SCALE_MYSQL_CONTAINER=tecnofit-mysql-scale
SCALE_DASHBOARD_CONTAINER=tecnofit-dashboard
SCALE_MAILHOG_CONTAINER=tecnofit-mailhog-scale

# Database (Scale Environment)
SCALE_DB_HOST=mysql-scale
SCALE_DB_DATABASE=hyperf

# Database (Scale Test Environment)
SCALE_TEST_DB_HOST=mysql-scale-test
SCALE_TEST_DB_DATABASE=hyperf_test

# ===========================================
# Docker Compose Files Reference
# ===========================================
# docker-compose.yml              - Production (single instance)
# docker-compose-test.yml         - Test with dashboard (single instance)
# docker-compose-scale.yml        - Production (horizontal scaling)
# docker-compose-scale-test.yml   - Test with dashboard (horizontal scaling)
